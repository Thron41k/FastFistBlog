@model IEnumerable<FastFistBlog.Server.Controllers.DTO.RoleListItemDto>

@{
    ViewData["Title"] = "Список ролей";
}

<h1>@ViewData["Title"]</h1>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<table class="table table-striped table-bordered align-middle">
    <thead class="table-light">
        <tr>
            <th>Название</th>
            <th>Описание</th>
            <th style="width: 280px;">Действия</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="3" class="text-center text-muted">Роли не найдены</td>
            </tr>
        }
        else
        {
            foreach (var role in Model)
            {
                <tr>
                    <td>@role.Name</td>
                    <td>@role.Description</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@role.Id" class="btn btn-sm btn-primary">Редактировать</a>
                        <a asp-action="Delete" asp-route-id="@role.Id" class="btn btn-sm btn-danger">Удалить</a>
                    </td>
                </tr>
            }

        }
    </tbody>
</table>

<div class="mt-3">
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Добавить роль
    </a>
</div>