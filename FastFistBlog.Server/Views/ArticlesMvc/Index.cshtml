@model List<FastFistBlog.Data.Models.Article>

@{
    ViewData["Title"] = "Список статей";
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<h1>Список статей</h1>
<table class="table table-striped table-bordered align-middle">
    <thead class="table-light">
        <tr>
            <th>Заголовок</th>
            <th>Автор</th>
            <th>Дата создания</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var article in Model)
        {
            <tr>
                <td>@article.Title</td>
                <td>@(article.Author!.UserName)</td>
                <td>@article.CreatedAt.ToLocalTime().ToString("dd.MM.yyyy HH:mm")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@article.Id" class="btn btn-sm btn-primary">Просмотр</a>
                    @if (User.Identity?.Name == article.Author.UserName || User.IsInRole("Administrator") || User.IsInRole("Moderator"))
                    {
                        <a asp-action="Edit" asp-route-id="@article.Id" class="btn btn-sm btn-primary">Редактировать</a>
                        <a asp-action="Delete" asp-route-id="@article.Id" class="btn btn-sm btn-danger">Удалить</a>
                    }

                </td>
            </tr>
        }
    </tbody>
</table>
<div class="mt-3">
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Добавить статью
    </a>
</div>

