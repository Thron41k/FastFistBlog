@model List<FastFistBlog.Server.Controllers.DTO.UserListItemVm>
@{
    ViewData["Title"] = "Пользователи";
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
<h1>Пользователи</h1>

<table class="table table-striped table-bordered align-middle">
    <thead class="table-light">
    <tr>
        <th>Имя</th>
        <th>Почта</th>
        <th>Роли</th>
        <th>Статей</th>
        <th>Комментариев</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var u in Model)
    {
        <tr>
                <td>@u.UserName</td>
            <td>@u.Email</td>
            <td>@string.Join(", ", u.Roles)</td>
            <td>@u.ArticlesCount</td>
            <td>@u.CommentsCount</td>
            <td>
                <a asp-action="Details" asp-route-id="@u.Id" class="btn btn-sm btn-primary">Подробнее</a>
                <a asp-action="Edit" asp-route-id="@u.Id" class="btn btn-sm btn-primary">Редактировать</a>
                <a asp-action="Delete" asp-route-id="@u.Id" class="btn btn-sm btn-danger">Удалить</a>
            </td>
        </tr>
    }
    </tbody>
</table>
<a asp-action="Create" class="btn btn-primary">
    <i class="bi bi-plus-circle"></i> Создать пользователя
</a>