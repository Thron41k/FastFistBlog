@model FastFistBlog.Server.Data.Models.ApplicationUser
@{
    ViewData["Title"] = "Удаление пользователя";
    var roles = (IEnumerable<string>) (ViewBag.Roles ?? Array.Empty<string>());
}
<h1>Удаление пользователя</h1>

<div class="alert alert-warning">
    Вы действительно хотите удалить пользователя <strong>@(string.IsNullOrWhiteSpace(Model.UserName) ? Model.Email : Model.UserName)
    </strong>?
</div>

<dl class="row">
    <dt class="col-sm-3">Почта</dt>
    <dd class="col-sm-9">@Model.Email</dd>

    <dt class="col-sm-3">Роли</dt>
    <dd class="col-sm-9">@string.Join(", ", roles)</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <button type="submit" class="btn btn-danger">Удалить</button>
    <a asp-action="Index" class="btn btn-secondary">Отмена</a>
</form>