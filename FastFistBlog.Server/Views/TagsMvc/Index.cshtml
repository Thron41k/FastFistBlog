@model List<FastFistBlog.Data.Models.Tag>

@{
    ViewData["Title"] = "Список тегов";
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<h1>Список тегов</h1>

<table class="table table-striped table-bordered align-middle">
    <thead class="table-light">
    <tr>
        <th>Название</th>
        <th>Действия</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var tag in Model)
    {
        <tr>
            <td>@tag.Name</td>
            <td>
                <a asp-action="Edit" asp-route-id="@tag.Id" class="btn btn-sm btn-primary">Редактировать</a>
                <a asp-action="Delete" asp-route-id="@tag.Id" class="btn btn-sm btn-danger">Удалить</a>
            </td>
        </tr>
    }
    </tbody>
</table>
<a asp-action="Create" class="btn btn-primary">
    <i class="bi bi-plus-circle"></i> Добавить новый тег
</a>